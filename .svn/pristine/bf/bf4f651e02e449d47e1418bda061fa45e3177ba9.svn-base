{yun:}include file="$userstyle/header.htm"{/yun}
<div class="w950">
    {yun:}include file="$userstyle/left.htm"{/yun}
    <div class="mian_right fltR mt12">
        <div class="member_right_h1 fltL"><span class="member_right_span fltL">面试邀请</span></div>
        <div class="remindbox01 mt10">
            <div id="gms_showclew"></div>
            <div class="resumelistbox01 mt10">
                <div id="" class="resume_box_list">
                {yun:}if !empty($rows){/yun}
                    <div class="List_Ope List_Title ">
                        <span class="List_Title_span List_Title_w170">面试职位</span>
                        <span class="List_Title_span List_Title_w330">公司名称</span>
                        <span class="List_Title_span List_Title_w230" style="text-align:center">操作</span>
                    </div>
                    {yun:}/if{/yun}
                    {yun:}foreach item=log from=$rows{/yun}
                    <div class="List_Ope List_Ope_Advisory">
                        <span class="List_Title_span List_Title_w170">
                            <a href="{yun:}url m=job c=comapply id='`$log.jobid`'{/yun}" class="List_Title_span_com">{yun:}$log.jobname{/yun}</a>
                        </span>
                        <span class="List_Title_span List_Title_w330">
                            <a href="{yun:}url m=company c=show id='`$log.fid`'{/yun}" target="_blank">{yun:}$log.fname{/yun}</a>
                        </span>
                        <span class="List_Title_span List_Title_w230" style="width:250px;text-align:center">
                 
                         <a href="javascript:void(0);" onclick="layer_del('您确定要删除？', 'index.php?c=msg&act=del&id={yun:}$log.id{/yun}'); " class="cblue">删除</a> <span class="u_List_line">|</span>
						 {yun:}if $log.is_browse!="3"&&$log.is_browse!="4"{/yun}
						 <a href="javascript:void(0);" onclick="layer_del('您确定要屏蔽该公司并删除该邀请？','index.php?c=msg&act=shield&id={yun:}$log.id{/yun}');" class="cblue">屏蔽</a><span class="u_List_line">|</span>
                         <a href="javascript:void(0);" onclick="layer_del('确定要拒绝面试邀请？', 'index.php?c=msg&act=inviteset&id={yun:}$log.id{/yun}&browse=4')" class="cblue">拒绝面试</a><span class="u_List_line">|</span><a href="javascript:void(0);" onclick="layer_del('确定要同意面试邀请？', 'index.php?c=msg&act=inviteset&id={yun:}$log.id{/yun}&browse=3')" class="cblue">同意面试</a>
                         <span class="u_List_line">|</span>
						 {yun:}/if{/yun}
                           <a href="javascript:getcont('{yun:}$log.id{/yun}');">查看</a>
                        </span>
                        <div style="width:100%; float:left"><span style="padding-left:10px;">邀请时间：{yun:}$log.datetime|date_format:'%Y-%m-%d'{/yun}</span>
                        <span style="padding-left:48px;">我的操作： {yun:}if $log.is_browse=="1"{/yun}
                            <font color="#f60">尚未回复</font>
                            {yun:}elseif $log.is_browse=="2"{/yun}
                            <font color="#666">已查看</font>
                            {yun:}elseif $log.is_browse=="3"{/yun} 
                            	<font color="#008000">已同意</font>
                            {yun:}elseif $log.is_browse=="4"{/yun}
                            	<font color="#FF00000">已拒绝</font>
                            {yun:}/if{/yun}</span>
                        </div>
                    </div>
                    {yun:}foreachelse{/yun}
                    <div class="msg_no">您还没有邀请信息。</div>
                    {yun:}/foreach{/yun}
                </div>
                <div class="diggg">{yun:}$pagenav{/yun}</div>
            </div>
        </div>
    </div>
</div>
<div id="getcont" style="width:350px;height:250px; display:none;">
    <div style=" padding:10px;">
        <div class="audition_list"><span class="audition_list_span">面试职位：</span><em class="audition_list_em" id="jobname"></em></div>
        <div class="audition_list"><span class="audition_list_span">联系人： </span><em class="audition_list_em" id="linkman"></em></div>
        <div class="audition_list"><span class="audition_list_span">联系电话：</span><em class="audition_list_em" id="linktel"></em></div>
        <div class="audition_list"><span class="audition_list_span">面试时间：</span><em class="audition_list_em" id="intertime"></em></div>
        <div class="audition_list"><span class="audition_list_span">面试地址：</span><em class="audition_list_em" id="address"></em></div>
        <div class="audition_list"><span class="audition_list_span">面试备注：</span><em class="audition_list_em" id="content"></em></div>
    </div>
</div>
<script>
    function getcont(id) {
        $.post("index.php?c=msg&act=ajax", { id: id }, function (data) {
            var data = eval('(' + data + ')');
            $("#jobname").html(data.jobname);
            $("#linkman").html(data.linkman);
            $("#linktel").html(data.linktel);
            $("#intertime").html(data.intertime);
            $("#address").html(data.address);
            $("#content").html(data.content);
            $.layer({
                type: 1,
                title: '邀请信息',
                shade: [0],
                closeBtn: [0, true],
                border: [10, 0.3, '#000', true],
                area: ['350px', 'auto'],
                page: { dom: "#getcont" }
            });
        })
    }
</script>
{yun:}include file="$userstyle/footer.htm"{/yun}