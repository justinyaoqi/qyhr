{yun:}include file="$comstyle/header.htm"{/yun}
<div class="w1000">
  <div class="admin_mainbody"> {yun:}include file="$comstyle/left.htm"{/yun}
    <div class=right_box>
      <div class=admincont_box>
                <div class="com_tit">
       <span class="com_tit_span">已邀请面试的简历</span> 
        <form action="index.php" method="get" />
           <div class="news_search">
          <input name="c" type="hidden" value="{yun:}$smarty.get.c{/yun}">
               <input name="keyword" id="keyword" type="text" class="news_text" value="请输入简历关键字" placeholder="请输入简历关键字">
              <input name="" type="submit"class="news_bth" value=" ">
          </div> 
          </form>
        </div>
        <div class="com_body">
      <!-- <div class="job_re_ts"> 您已邀请 <span class="re_cor blod">{yun:}$total{/yun}</span> 份简历面试 </div>-->
        <div class=admin_textbox_04>
       <iframe id="supportiframe"  name="supportiframe" onload="returnmessage('supportiframe');" style="display:none"></iframe>
          <form action="{yun:}$now_url{/yun}&act=del" method="post" target="supportiframe" id='myform'>
           <div class=table>
          <div id="job_checkbokid" >
             {yun:}if !empty($rows){/yun}
              <div class="job_news_list job_news_list_h1">
                  <span class="job_news_list_span job_w30">&nbsp;</span>
                   <span class="job_news_list_span job_w100" style="text-align:left">姓名</span>
                  <span class="job_news_list_span job_w200">求职意向</span>
                  <span class="job_news_list_span job_w100">工作经验</span> 
                  <span class="job_news_list_span job_w100">期望薪资</span>
                  <span class="job_news_list_span job_w100">邀请时间</span>
                  <span class="job_news_list_span job_w80">状态</span>
                  <span class="job_news_list_span job_w80">操作</span>
                 </div>
                {yun:}foreach from=$rows item=job{/yun}
                {yun:}assign var="uid" value=$job.uid{/yun}                
                <div class="job_news_list">
					<span class="job_news_list_span job_w30" style="padding-right:6px;"><input type=checkbox name="delid[]" value="{yun:}$job.id{/yun}" style="margin-top:4px;"></span>
					<span class="job_news_list_span job_w100" style="text-align:left;width:95px;">&nbsp;<a href="{yun:}url m=resume c=show uid='`$uid`'{/yun}" target=_blank class="com_Release_name">{yun:}$user[$uid].name{/yun}</a></span>
					<span class="job_news_list_span job_w200">&nbsp;{yun:}$user[$uid].jobname{/yun}</span>
					<span class="job_news_list_span job_w100">&nbsp;{yun:}$user[$uid].exp{/yun}</span> 
					<span class="job_news_list_span job_w100">&nbsp;{yun:}$user[$uid].salary{/yun}</span>
					<span class="job_news_list_span job_w100">&nbsp;{yun:}$job.datetime|date_format:'%Y-%m-%d'{/yun}</span>
					<span class="job_news_list_span job_w80">
						{yun:}if $job.is_browse=="1"{/yun}
                           <font color="blue">对方未回复</font>
                           {yun:}elseif $job.is_browse=="2"{/yun}
                           	已查看
                           {yun:}elseif $job.is_browse=="3"{/yun} 
                           	<font color="#008000">已同意</font>
                           {yun:}elseif $job.is_browse=="4"{/yun}
                           	<font color="#FF00000">已拒绝</font>
                           {yun:}/if{/yun} 
                     </span>
					<span class="job_news_list_span job_w80"><a href="javascript:void(0)" onclick="layer_del('确定要删除？', '{yun:}$now_url{/yun}&act=del&id={yun:}$job.id{/yun}')" class="uesr_name_a">删除</a></span>
                 </div> 
                {yun:}/foreach{/yun}
				<div>  
				<div class="com_Release_job_bot"> <span class="com_Release_job_qx"><input id='checkAll'  type="checkbox" onclick='m_checkAll(this.form)'class="com_Release_job_qx_check"> 全选</span>
					 <INPUT  class="c_btn_02" type="button" name="subdel" value="批量删除" onclick="return really('delid[]');">
					
				 </div> 
				<div class="diggg" style="width:100%; text-align:center; margin-top:20px; float:left;">{yun:}$pagenav{/yun}</div>
				</div>
                {yun:}elseif $smarty.get.keyword!="" {/yun}
                 <div class="msg_no">没有搜索邀请记录。</div>
                {yun:}else{/yun}
                 <div class="msg_no">您还没有邀请记录。</div>
                {yun:}/if{/yun} 
          </form>
        </div>        
      </div>
    </div>
  </div>
   </div>
</div>
{yun:}include file="$comstyle/footer.htm"{/yun} 