{template header}
<!--加载编辑器-->
{php doAction('xheditor')}
<script language="javascript" type="text/javascript" src="{SITE_URL}public/js/date/WdatePicker.js?4.72"></script>
<link type="text/css" rel="stylesheet" href="{SITE_URL}app/{$app}/skins/{$skin}/editor.css" />

<div class="midder">
<div class="mc">
<h1>
发布活动
</h1>

<form method="POST" action="{SITE_URL}index.php?app=event&ac=do&ts=add" enctype="multipart/form-data">
<table width="800">
<tbody>
<tr><td width="100">标题: </td>
<td><input style="padding:3px 0;width:400px;" type="text" value="" maxlength="100" size="50" name="title"></td></tr>
<tr>
<td>类型:</td>
<td>
<select name="typeid">
<!--{loop $arrType $key $item}-->
<option value="{$item[typeid]}">{$item[typename]}</option>
<!--{/loop}-->
</select>
</td>
</tr>
<tr>
<td>开始时间：</td>
<td>
<input name="time_start" readonly value="" onClick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm',minDate:'{php echo date('Y-m-d')} 00:00',maxDate:'{php echo date('Y-m-d',time()+604800)} 00:00'})" /> * 7天以内。
</td>
</tr>
<tr>
<td>结束时间：</td>
<td>
<input class="date_input" name="time_end" value="" onClick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm',minDate:'{php echo date('Y-m-d')} 00:00',maxDate:'{php echo date('Y-m-d',time()+2502000)} 00:00'})"  /> * 30天以内。</td>
</tr>
<tr><td>地点：</td><td>
<input style="width:300px;padding:2px;" name="address" />
</td>
</tr>
<tr>
<td valign="top">
内容：
</td><td><textarea class="editors" id="bbcode" style="width:100%;height:300px;" name="content"></textarea></td></tr>

<tr><td>活动海报：</td><td><input type="file" name="photo" /></td></tr>

<tr><td></td><td>
<input class="submit" type="submit" value="发布活动">
</td></tr></tbody></table>
</form>

</div>
</div>
{template footer}