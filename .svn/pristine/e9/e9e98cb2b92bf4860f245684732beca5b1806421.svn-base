<div class="bbox">
    <div class="btitle"></div>
    <div class="bc commlist">
        <div class="clist">
            <ul>
                {loop $arrArticle $key $item}
                <li>
                    {if $item['photo']}
                    <h2><a href="{tsUrl('article','show',array('id'=>$item[articleid]))}">
                        <img style="float:left;" src="{php echo tsXimg($item['photo'],'article',180,140,$item['path'],'1')}" />
                    </a>
                    </h2>
                    {/if}
                    <div class="title">
                        <a href="{tsUrl('article','show',array('id'=>$item[articleid]))}">{$item[title]}</a>
                    </div>
                    <div class="info">
                        <a href="{tsUrl('user','space',array('id'=>$item[user][userid]))}">{$item[user][username]}</a> 发表于 {$item[addtime]}
                    </div>
                    <div class="content">{$item[content]} (<a href="{tsUrl('article','show',array('id'=>$item[articleid]))}">查看全文</a>)</div>
                    <div class="cate tar">来自：<a href="{tsUrl('article','cate',array('id'=>$item['cate']['cateid']))}">{$item['cate']['catename']}</a><span class="badge">{$item['count_recommend']}</span>推荐 <span class="badge">{$item['count_comment']}</span>评论</div>
                    <div class="clear"></div>
                </li>
                {/loop}
            </ul>
        </div>
    </div>
</div>